<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:banner_radius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/banner"
        android:id="@+id/home_welcome"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text"
            android:layout_alignParentStart="true"
            android:typeface="monospace"
            android:textColor="@color/fontColor"
            android:textSize="24sp"
            tools:text="早上好，徐梵！"/>

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/welcome_reservation"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="8dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:text="如需查看预约，请进入“我的预约”查看\n如需预约请点击下方“预约”"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@id/welcome_text"/>


    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/home_welcome"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"

        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/home_content_wrapper"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content_title"
            android:textColor="@color/fontColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="24dp"
            android:typeface="serif"
            android:text="专科门诊"/>

        <ImageView
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_small"
            android:layout_toRightOf="@id/content_title"/>

        <ImageView
            android:layout_marginStart="40dp"
            android:id="@+id/department_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sjwk_small"
            android:layout_below="@+id/content_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_1"
            android:layout_marginStart="32dp"
            android:textColor="@color/black"
            android:text="神经外科"/>


        <ImageView
            android:layout_marginStart="50dp"
            android:id="@+id/department_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/department_image_1"
            android:src="@drawable/sjnk_small"
            android:layout_below="@+id/content_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_2"
            android:layout_toRightOf="@id/department_desc_1"
            android:layout_marginStart="36dp"
            android:textColor="@color/black"
            android:text="神经内科"/>

        <ImageView
            android:id="@+id/department_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_title"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/department_image_2"
            android:src="@drawable/xwk_small" />

        <TextView
            android:id="@+id/department_desc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_2"
            android:layout_toRightOf="@id/department_desc_2"
            android:layout_marginStart="42dp"
            android:textColor="@color/black"
            android:text="胸外科"/>
        <ImageView
            android:layout_marginStart="55dp"
            android:id="@+id/department_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/department_image_3"
            android:src="@drawable/erk_small"
            android:layout_below="@+id/content_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_3"
            android:layout_toRightOf="@id/department_desc_3"
            android:layout_marginStart="60dp"
            android:textColor="@color/black"
            android:text="儿科"/>

        <ImageView
            android:id="@+id/department_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_desc_1"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/erbh_small" />

        <TextView
            android:id="@+id/department_desc_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_5"
            android:layout_marginStart="32dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:text="耳鼻喉科"/>


        <ImageView
            android:layout_marginStart="50dp"
            android:id="@+id/department_image_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/department_image_1"
            android:src="@drawable/xxgk_small"
            android:layout_below="@+id/department_desc_2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_6"
            android:layout_toRightOf="@id/department_desc_1"
            android:layout_marginStart="36dp"
            android:textColor="@color/black"
            android:text="心血管科"/>

        <ImageView
            android:layout_marginStart="55dp"
            android:id="@+id/department_image_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/department_image_2"
            android:src="@drawable/zlk_small"
            android:layout_below="@+id/department_desc_3"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_7"
            android:layout_toRightOf="@id/department_desc_2"
            android:layout_marginStart="44dp"
            android:textColor="@color/black"
            android:text="肿瘤科"/>
        <ImageView
            android:layout_marginStart="55dp"
            android:id="@+id/department_image_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/department_image_3"
            android:src="@drawable/xhnk_small"
            android:layout_below="@+id/department_desc_4"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/department_desc_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_image_8"
            android:layout_toRightOf="@id/department_desc_3"
            android:layout_marginStart="48dp"
            android:textColor="@color/black"
            android:text="消化内科"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>