<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <RelativeLayout
        android:id="@+id/department_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/department_item"
            android:layout_margin="8dp"
            android:id="@+id/department_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

        <RelativeLayout
            android:id="@+id/department_name_wrapper"
            android:layout_toEndOf="@+id/department_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/fontColor"
                tools:text="神经外科"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F0F0F0"
                android:layout_below="@id/department_name"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/department_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/department_name"
                android:textSize="16sp"
                android:text="这里是科室的介绍" />




        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>